
# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gmail
account        gmail
host           smtp.gmail.com
port           587
from           {{ gmail_account }}
user           {{ gmail_account }}
password       {{ gmail_password }}

# A freemail service
#account        freemail
